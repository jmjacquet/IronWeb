# Environment
ENV=production
DEBUG=False

# Database Configuration
DB_HOST=mariadb_ironweb
DB_PORT=3306
DB_USER=ironweb_user
DB_PASS=your_secure_password_here

# Django Configuration
SECRET_KEY=your-secret-key-here-change-in-production
SESSION_COOKIE_NAME=ironweb_session

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
SERVER_EMAIL=noreply@ironwebgestion.com.ar
DEFAULT_FROM_EMAIL=noreply@ironwebgestion.com.ar

# Gunicorn Configuration
GUNICORN_WORKERS=6
GUNICORN_THREADS=3
GUNICORN_TIMEOUT=120
GUNICORN_WSGI=ggcontable.wsgi:application

# Docker Operations
COLLECT_STATIC=false
RUN_MIGRATIONS=false

